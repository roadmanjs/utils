{
    "name": "@roadmanjs/utils",
    "version": "0.0.3",
    "description": "Shared utilities to use for any other package",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "docs/",
        "dist/",
        "register/",
        "LICENSE"
    ],
    "author": {
        "name": "Ceddy Muhoza",
        "email": "ceddymuhoza@gmail.com",
        "url": "https://ceddy.org"
    },
    "license": "MIT",
    "private": false,
    "repository": {
        "type": "git",
        "url": "git://github.com/roadmanjs/utils.git"
    },
    "keywords": [
        "roadman",
        "roadmanjs",
        "utils",
        "graphql",
        "client",
        "scripts"
    ],
    "bugs": {
        "url": "https://github.com/roadmanjs/utils/issues"
    },
    "homepage": "https://github.com/roadmanjs/utils",
    "scripts": {
        "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
        "build": "rm -rf dist && ./node_modules/.bin/tsc --skipLibCheck",
        "test": "mocha src/*test.ts --exit",
        "prepublishOnly": "npm run build",
        "eslint": "eslint ./src --fix --ext=ts"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run eslint",
            "npm run build"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/chalk": "^2.2.0",
        "@types/debug": "^4.1.5",
        "@types/dotenv": "^8.2.0",
        "@types/lodash": "^4.14.168",
        "@types/mocha": "^8.2.0",
        "@types/node": "^10.0.3",
        "@types/source-map-support": "^0.4.0",
        "@typescript-eslint/eslint-plugin": "^3.4.0",
        "@typescript-eslint/parser": "^3.4.0",
        "chai": "^4.2.0",
        "eslint": "7.32.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-json": "^2.1.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-simple-import-sort": "^5.0.2",
        "eslint-plugin-typescript": "^0.14.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.1.7",
        "mocha": "^9.2.0",
        "prettier": "^2.0.5",
        "ts-node": "^9.1.1",
        "tslint": "^5.11.0",
        "tslint-config-standard": "^8.0.1",
        "typescript": "^4.4.3"
    },
    "peerDependencies": {
        "typescript": ">=2.0"
    },
    "dependencies": {
        "shelljs": "^0.8.5",
        "ts-morph": "^13.0.3"
    }
}
